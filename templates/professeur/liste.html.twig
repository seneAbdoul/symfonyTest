{% extends 'base.html.twig' %}

{% block title %}Hello ProfesseurController!{% endblock %}

{% block body %}
  <div class="container mt-16" style="width: 80%;">
         {% for message in app.flashes("success") %}
        <div class=" alert alert-success text-center" style="color:green">
             {{message}}  
        </div> 
        {% endfor %}
       
    <div class="row justify-content-center" style="width: 100%;">
            <h1 class="text-center">Liste des professeurs</h1>
      <div class="col-8" style="width: 100%;">
        <a href="{{path('app_professeur')}}" class="btn btn"
        style="background-color: rgb(5, 68, 104) ;float: right;color: white">
            Ajouter Professeur</a>
        <div class="overflow-x-auto" style="width: 100%;">
          <table class="table-auto min-w-full divide-y divide-gray-200" style="width: 100%;">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Identifiant</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prénom</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Grade</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {% for professeur in professeurs %}
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">{{professeur.id}}</td>
                <td class="px-6 py-4 whitespace-nowrap">{{professeur.nom}}</td>
                <td class="px-6 py-4 whitespace-nowrap">{{professeur.prenom}}</td>
                <td class="px-6 py-4 whitespace-nowrap">{{professeur.grade}}</td>
                <td class="px-6 py-4 whitespace-nowrap flex justify-around">
                    <a href="{{ path('app_professeur_edit',{ id: professeur.id }) }}"><span class="icon"><i class="fas fa-pen"></i></span></a>
                    <a href="{{ path('app_professeur_delete',{ id: professeur.id }) }}"><span class="icon"><i class="fas fa-trash-alt" style="color: red;"></i></span></a>
                </td>
              {% endfor %}
              <!-- Plus de lignes peuvent être ajoutées ici -->
            </tbody>
          </table>
          <!-- Affichage de la pagination -->
          <div class="navigation d-flex justify-content-center mt-2">
            {{ knp_pagination_render(professeurs) }}
          </div>
        </div>
      </div>
    </div>
  </div>


{% endblock %}