{% extends 'base.html.twig' %}

{% block title %}add classem{% endblock %}

{% block body %}
 <div class="container " style="width: 60%; margin-top: 3%;">
        <h3 class="text-center " style="color:rgb(5, 68, 104);margin-bottom: 4%;">Ajouter des Absences</h3>
        <div class="shadow p-3 mb-5 bg-body rounded">
            <h1 style="text-align: center;">liste de la classe</h1>
            {{ form_start(form) }}
            <div id="etudiant-wrapper">
                {% for field in form.etudiant %}
                    <div style="min-width: 10%;">
                        {{ form_widget(field) }}
                        {{ form_label(field) }}
                    </div>
                {% endfor %}
            </div>
    
                <div class="form-group" style="margin-left: 80%;">
                    {{ form_row(form.submit) }}
                </div>   
            {{ form_end(form) }} 
        </div>
</div>     
{% endblock %}
