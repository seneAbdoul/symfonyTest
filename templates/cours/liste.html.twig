{% extends 'base.html.twig' %}

{% block title %}Mes cours{% endblock %}

{% block body %}

  <div class="container mt-6 mr-16" style="width: 80%;">
         {% for message in app.flashes("success") %}
        <div class=" alert alert-success text-center" style="color:green">
             {{message}}  
        </div> 
        {% endfor %}

             <div class="titre d-flex justify-content-between">
                <h1>Liste Mes Cours</h1>
                   <div class="btn ">
                    <a name="" id="" class="btn btn-info btn-sm mr-4" style="color:white" 
                    href="" role="button">+ Inscription</a>
                   </div>
             </div>

             <div class="container1">
                <div class="row ml-10">
                  <div class="col-md-4">
                    <div class="d-flex align-items-center">
                    <label for="selectField" class="date mr-2"> Classes: </label>
                      <select class="form-select mr-2" id="selectField">
                            <option value=""></option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <label for="dateField" class="date mr-2">Date:</label>
                      <input type="date" class="form-control mr-2" id="dateField">
                    </div>
                  </div>
                  <div class="col-md-4 align-self-end">
                    <button type="button" class="btn" style="background-color: rgb(5, 68, 104);color:white">
                      <i class="fas fa-search"></i> Rechercher
                    </button>
                  </div>
                </div>
              </div>
              
          


    <div class="row d-flex justify-content-center" style="width: 100%;">
        <div class="col-8 mt-4" style="width: 100%;">
            <div class="overflow-x-auto " style="width: 100%;">
                <table class="table-auto min-w-full divide-y divide-gray-200" style="width: 100%;">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">identifiant</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">libelle</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">Professeur</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">Classe</th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for cour in cours %}
                     
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">{{ cour.id}}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ cour.libelle }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ cour.getProfesseur.getNom() }}  {{ cour.getProfesseur.getPrenom() }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ cour.getProfesseur.getModule.libelle }}</td>
                            <td class="px-6 py-4 whitespace-nowrap flex justify-around">
                            <a name="" id="" class="btn btn-info btn-sm" style="color:white" href="#" role="button"><i class="fa fa-edit "></i> Absences</a>
                            <a name="" id="" class="btn btn-sm" style="background-color: rgb(5, 68, 104);color:white" href="#" role="button"><i class="fa fa-trash" aria-hidden="true"></i>Annuler</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <!-- Affichage de la pagination -->
                <div class="navigation d-flex justify-content-center mt-2 " style="color:rgb(5, 68, 104) ;">
                    {{ knp_pagination_render(cours) }}
                </div>
            </div>
        </div>
    </div>
    
    
  </div>


{% endblock %}