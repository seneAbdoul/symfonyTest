{% extends 'base.html.twig' %}

{% block title %}Liste etudiant{% endblock %}

{% block body %}

  <div class="container mt-6 mr-16" style="width: 80%;">
      <h1 style="text-align: center;">Liste des Etudiant {{ etudiants[0].classe.libelle }} </h1>
    <div class="row d-flex justify-content-center" style="width: 100%;">
        <div class="col-8 mt-4" style="width: 100%;">
            <div class="overflow-x-auto " style="width: 100%;">
                <table class="table-auto min-w-full divide-y divide-gray-200" style="width: 100%;">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">matricule</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">nom</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">prenom</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">tuteur</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">classe</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for etudiant in etudiants %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">{{ etudiant.etudiant.matricule }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ etudiant.etudiant.nom }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ etudiant.etudiant.prenom}}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ etudiant.etudiant.tuteur }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ etudiant.classe.libelle }}</td>
                             <td class="px-6 py-4 whitespace-nowrap flex justify-around">
                                <a href=""><span class="icon"><i class="fas fa-pen"></i></span></a>
                                <a href=""><span class="icon"><i class="fas fa-trash-alt" style="color: red;"></i></span></a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <!-- Affichage de la pagination -->
                <div class="navigation d-flex justify-content-center mt-2 " style="color:rgb(5, 68, 104) ;">
                    {{ knp_pagination_render(etudiants) }}
                </div>
            </div>
        </div>
    </div> 
  </div>


{% endblock %}