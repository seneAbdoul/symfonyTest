{% extends 'base.html.twig' %}

{% block title %}Liste Des planification{% endblock %}

{% block body %}

  <div class="container mt-6 mr-16" style="width: 80%;">
      <h1 style="text-align: center;">Liste de la Planification numero {{ planification.id }} </h1>
    <div class="row d-flex justify-content-center" style="width: 100%;">
        <div class="col-8 mt-4" style="width: 100%;">
            <div class="overflow-x-auto " style="width: 100%;">
                <table class="table-auto min-w-full divide-y divide-gray-200" style="width: 100%;">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">id</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">libelle_cours</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">libelle_classe</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">Nombre_heure</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">Heure_fait</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">heure_restant</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-r border-gray-200">actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for classe in classes %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">{{ classe.classe.id }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ planification.cour.libelle }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ classe.classe.libelle }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ classe.getNombreHeure }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ classe.getHeureFait }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">{{ (classe.getNombreHeure )-(classe.getHeureFait) }}</td>
                            <td class="px-6 py-4 whitespace-nowrap flex justify-around">
                             <a name="" id="" class="btn btn-info btn-sm" style="color:white" 
                               href="{{path('app_seance_liste',{id : classe.classe.id})}}" role="button">+New Seance</a>
                               <a name="" id="" class="btn btn-info btn-sm" style="color:white;background-color:  rgb(5, 68, 104);" 
                               href="{{path('app_planification_listeEtudiant',{id : classe.classe.id})}}" role="button">Liste Etudiant</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <!-- Affichage de la pagination -->
                <div class="navigation d-flex justify-content-center mt-2 " style="color:rgb(5, 68, 104) ;">
                    {{ knp_pagination_render(classes) }}
                </div>
            </div>
        </div>
    </div> 
  </div>


{% endblock %}
